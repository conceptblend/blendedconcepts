mixin a_standardRow
	.row&attributes(attributes)
		.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
			block

mixin a_halfStandardRow
	.row
		.col-sm-10.col-sm-offset-1.col-md-4.col-md-offset-2.col-lg-3.col-lg-offset-3
			block

mixin a_datePublished(strDate)
	- var reDateParse = /(\d{4})-(\d{1,2})-(\d{1,2})/gi
	//- [1] = year, [2] = month, [3] = day
	- var arrDate = reDateParse.exec(strDate)
	span(itemprop="datePublished", content="#{strDate}")
		= ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"][parseInt(arrDate[2])-1]
		| &nbsp;
		= arrDate[3]
		| ,&nbsp;
		= arrDate[1]

mixin a_spacer
	span.text-muted &nbsp;&nbsp;&mdash;&nbsp;&nbsp;